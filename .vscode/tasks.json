{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build OpenGL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "out/${fileBasenameNoExtension}",
                "src/*.cpp",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
